{
  "manifest_version": 3,
  "name": "10x your reading speed",
  "version": "3.0.3",
  "description": "10x your reading speed with RSVP and AI-powered preprocessing. Multi-browser speed reading extension.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "options_page": "pages/settings.html",
  "web_accessible_resources": [
    {
      "resources": [
        "pages/reader.html",
        "pages/settings.html",
        "assets/icons/*.png",
        "assets/icons/*.svg",
        "styles/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["contextMenus", "activeTab", "tabs", "storage", "clipboardRead", "identity"],
  "host_permissions": [
    "https://kinde-gated-openai-responses-api.path2dream.workers.dev/*",
    "https://reader10x.kinde.com/*"
  ],
  "oauth2": {
    "client_id": "${VITE_KINDE_CLIENT_ID}",
    "scopes": ["openid", "profile", "email"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "commands": {
    "speed_read_shortcut": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "MacCtrl+Shift+E"
      },
      "description": "10x your reading speed - read selected text"
    }
  }
}
