{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "downlevelIteration": true,
    "types": ["node", "@playwright/test", "chrome"],
    "skipLibCheck": true
  },
  "include": ["playwright.config.ts", "tests/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
